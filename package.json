{
    "name": "Facebook",
    "version": "1.0.20",
    "description": "A Facebook client for macOS, Windows and Linux",
    "main": "src/app.js",
    "scripts": {
        "start": "npx electron .",
        "dist-mac": "npx electron-builder -m dir",
        "dist-linux": "npx electron-builder -l AppImage",
        "dist-tux": "npx electron-builder -l AppImage",
        "dist-win": "npx electron-builder -w msi",
        "pack-mac": "electron-builder -m dir",
        "pack-tux": "electron-builder -l AppImage",
        "pack-win": "electron-builder -w msi"
    },
    "build": {
        "appId": "dev.yuhapps.facebook.katana",
        "extraResources": [
            "assets/**"
        ],
        "mac": {
            "category": "public.app-category.social-networking",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "extendInfo": {
                "NSMicrophoneUsageDescription": "YuhApps' Native Facebook require access to your Microphone for live streaming.",
                "NSCameraUsageDescription": "YuhApps' Native Facebook require access to your Camera for live streaming."
            },
            "target": "dir"
        },
        "linux": {
            "target": "AppImage"
        },
        "win": {
            "target": "msi"
        },
        "protocols": [
            {
                "name": "HTTP URLs",
                "schemes": [
                    "http"
                ]
            },
            {
                "name": "Secure HTTP URLs",
                "schemes": [
                    "https"
                ]
            }
        ]
    },
    "dependencies": {
        "electron-push-receiver": "^2.1.3",
        "electron-settings": "^4.0.2",
        "node-gyp": "^7.1.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3",
        "valid-url-utf8": "^1.0.7"
    },
    "devDependencies": {
        "bufferutil": "4",
        "electron": "^13.6.2",
        "electron-builder": "^22.13.1",
        "utf-8-validate": "5"
    },
    "postinstall": "electron-builder install-app-deps",
    "keywords": [
        "Facebook"
    ],
    "author": "YuhApps",
    "license": "ISC"
}