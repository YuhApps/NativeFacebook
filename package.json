{
    "name": "facebook",
    "productName": "Facebook",
    "version": "1.1.0",
    "description": "A Facebook client for macOS, Windows and Linux",
    "author": "Yuh Apps <yuhapps@gmail.com>",
    "homepage": "https://yuhapps.dev",
    "main": "src/app.js",
    "scripts": {
        "start": "npx electron .",
        "pack": "electron-builder",
        "pack-mac": "electron-builder -m --x64 --arm64 && open dist/",
        "pack-linux": "electron-builder -l --x64 tar.xz deb && open dist/",
        "pack-win": "electron-builder -w zip nsis --x64&& start dist\\"
    },
    "build": {
        "appId": "dev.yuhapps.facebook.katana",
        "afterSign": "./notarize.js",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "extraResources": [
            "assets/**"
        ],
        "mac": {
            "category": "public.app-category.social-networking",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "extendInfo": {
                "NSMicrophoneUsageDescription": "YuhApps' Native Facebook requires access to your Microphone for live streaming.",
                "NSCameraUsageDescription": "YuhApps' Native Facebook requires access to your Camera for live streaming.",
                "CFBundleURLTypes": [
                    {
                        "CFBundleURLName": "http URL",
                        "CFBundleURLSchemes": [
                            "http"
                        ]
                    },
                    {
                        "CFBundleURLName": "Secure http URL",
                        "CFBundleURLSchemes": [
                            "https"
                        ]
                    }
                ],
                "CFBundleDocumentTypes": [
                    {
                        "CFBundleTypeName": "HTML document",
                        "CFBundleTypeRole": "Viewer",
                        "LSItemContentTypes": [
                            "public.html"
                        ]
                    },
                    {
                        "CFBundleTypeName": "XHTML document",
                        "CFBundleTypeRole": "Viewer",
                        "LSItemContentTypes": [
                            "public.xhtml"
                        ]
                    }
                ]
            },
            "notarize": false
        },
        "linux": {
            "icon": "build/icon.icns",
            "maintainer": "YuhApps <yuhapps@gmail.com>"
        },
        "win": {
            "artifactName": "${productName}-${version}-windows-${arch}.${ext}",
            "fileAssociations": [
                {
                    "ext": "htm"
                },
                {
                    "ext": "html"
                },
                {
                    "ext": "shtml"
                },
                {
                    "ext": "xht"
                },
                {
                    "ext": "xhtml"
                }
            ]
        },
        "protocols": [
            {
                "name": "HTTP URLs",
                "schemes": [
                    "http"
                ]
            },
            {
                "name": "Secure HTTP URLs",
                "schemes": [
                    "https"
                ]
            }
        ]
    },
    "dependencies": {
        "@electron/get": "^2.0.1",
        "@electron/remote": "^2.0.8",
        "electron-fcm-push-receiver": "^2.1.7",
        "electron-fetch": "^1.7.4",
        "electron-updater": "^6.1.1",
        "node-gyp": "^7.1.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3",
        "valid-url-utf8": "^1.0.7"
    },
    "devDependencies": {
        "bufferutil": "4",
        "electron": "^25.6.0",
        "utf-8-validate": "5"
    },
    "postinstall": "electron-builder install-app-deps",
    "keywords": [
        "Facebook"
    ],
    "license": "ISC"
}
