{
    "name": "facebook",
    "productName": "Facebook",
    "version": "1.0.85",
    "description": "A Facebook client for macOS, Windows and Linux",
    "author": "Yuh Apps",
    "homepage": "https://yuhapps.dev",
    "main": "src/app.js",
    "scripts": {
        "start": "npx electron .",
        "pack": "npx electron-builder",
        "pack-mac": "npx electron-builder && open dist/mac",
        "pack-linux": "npx electron-builder && open dist/",
        "pack-win": "npx electron-builder && start dist\\"
    },
    "build": {
        "appId": "dev.yuhapps.facebook.katana",
        "extraResources": [
            "assets/**"
        ],
        "mac": {
            "category": "public.app-category.social-networking",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "extendInfo": {
                "NSMicrophoneUsageDescription": "YuhApps' Native Facebook require access to your Microphone for live streaming.",
                "NSCameraUsageDescription": "YuhApps' Native Facebook require access to your Camera for live streaming.",
                "CFBundleURLTypes": [
                    {
                        "CFBundleURLName": "http URL",
                        "CFBundleURLSchemes": [
                            "http"
                        ]
                    },
                    {
                        "CFBundleURLName": "Secure http URL",
                        "CFBundleURLSchemes": [
                            "https"
                        ]
                    }
                ],
                "CFBundleDocumentTypes": [
                    {
                        "CFBundleTypeName": "HTML document",
                        "CFBundleTypeRole": "Viewer",
                        "LSItemContentTypes": [
                            "public.html"
                        ]
                    },
                    {
                        "CFBundleTypeName": "XHTML document",
                        "CFBundleTypeRole": "Viewer",
                        "LSItemContentTypes": [
                            "public.xhtml"
                        ]
                    }
                ]
            },
            "target": [
                {
                    "target": "pkg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ]
        },
        "pkg": {
            
        },
        "linux": {
            "icon": "build/icon.icns",
            "maintainer": "YuhApps",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "ia32",
                        "x64"
                    ]
                },
                {
                    "target": "tar.xz",
                    "arch": [
                        "ia32",
                        "x64"
                    ]
                }
            ]
        },
        "win": {
            "fileAssociations": [
                {
                    "ext": "htm"
                },
                {
                    "ext": "html"
                },
                {
                    "ext": "shtml"
                },
                {
                    "ext": "xht"
                },
                {
                    "ext": "xhtml"
                }
            ],
            "target": {
                "target": "msi",
                "arch": [
                    "ia32",
                    "x64"
                ]
            }
        },
        "protocols": [
            {
                "name": "HTTP URLs",
                "schemes": [
                    "http"
                ]
            },
            {
                "name": "Secure HTTP URLs",
                "schemes": [
                    "https"
                ]
            }
        ]
    },
    "dependencies": {
        "@electron/get": "^2.0.1",
        "@electron/remote": "^2.0.8",
        "electron-fcm-push-receiver": "^2.1.7",
        "electron-fetch": "^1.7.4",
        "node-gyp": "^7.1.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3",
        "valid-url-utf8": "^1.0.7"
    },
    "devDependencies": {
        "bufferutil": "4",
        "electron": "^24.4.1",
        "electron-builder": "^23.6.0",
        "electron-notarize": "^1.2.1",
        "utf-8-validate": "5"
    },
    "postinstall": "electron-builder install-app-deps",
    "keywords": [
        "Facebook"
    ],
    "license": "ISC"
}
